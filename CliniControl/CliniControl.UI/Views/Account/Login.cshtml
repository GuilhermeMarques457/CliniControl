@model LoginDTO

@{
    Layout = "~/Views/Shared/_LayoutNotLogged.cshtml";
}

<section class="form-section">
    <form asp-action="Login" asp-controller="Account" method="post" class="form-box">
        <div class="flex flex-spaced flex-align-center">
            <h2 class="form-heading title-decoration">Entrar</h2>
            <i class="ph ph-tooth form-heading"></i>
        </div>
        <div class="form-inputs-box">
            <div class="input-box">
                <i class="ph ph-envelope input-icon"></i>
                <label class="form-label" asp-for="Email">Email</label>
                <input class="form-input" asp-for="Email" placeholder="example@gmail.com" />
                <span class="input-decoration"></span>
            </div>
            <div class="input-validation-message-box">
                <span asp-validation-for="Email" class="validate-message"></span>
            </div>
            <div class="input-box">
                <i class="ph ph-password input-icon"></i>
                <label class="form-label" asp-for="Password">Senha</label>
                <input class="form-input" asp-for="Password" placeholder="**********" />
                <span class="input-decoration"></span>
            </div>
            <div class="input-validation-message-box">
                <span asp-validation-for="Password" class="validate-message"></span>
            </div>

            

            <div class="input-duo">
                <div class="input-box">
                    <div class="checkbox-input-box">
                        <label class="form-label" asp-for="RememberMe">Lembrar de mim</label>
                        <input asp-for="RememberMe" />
                    </div>
                </div>
                
            </div>

            <div class="error-box-not-found mg-bt-md">
                @ViewBag.NotFoundError
            </div>
            
            <div class="buttons-box">
                <button class="btn-form btn-send">Entrar <i class="ph ph-paper-plane-tilt"></i></button>
                <button class="btn-form btn-reset" type="reset">Limpar <i class="ph ph-broom"></i></button>
            </div>
        </div>
    </form>
</section>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
